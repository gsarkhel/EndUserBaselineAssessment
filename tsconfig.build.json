{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "es2015", "es2016", "es2021"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json", "__mocks__/styleMock.js"],
  "exclude": ["**/*.test.tsx"]
}
